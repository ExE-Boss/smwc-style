#!/bin/bash

basedir="$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")/.."
dir=dist

if [ $# -ge 1 ]; then
	dir=$1
	if [ ! -d "$basedir/$dir" ] || [ ! "$(ls -A "$basedir/$dir")" ]; then
		git clone -b gh-pages -v https://${GH_TOKEN}@github.com/ExE-Boss/smwc-style.git "$basedir/$dir"
	fi
	rm -rf "$basedir/$dir/*"
fi

yarn run post-layout --dest "$basedir/$dir"
